<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
		xmlns:mr="clr-namespace:MR.Gestures;assembly=MR.Gestures"
		x:Class="BartenderPrototype.MainPage">

	<AbsoluteLayout>

		<cv:CarouselView 
			x:Name="CarouselBottles"
			ItemsSource="{Binding Bottles}"
			AbsoluteLayout.LayoutBounds="1, 1, 1, 1"
			AbsoluteLayout.LayoutFlags="All"
			>

			<cv:CarouselView.ItemTemplate>
				<DataTemplate>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="*"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>												
						
					  	<mr:Image Grid.RowSpan="2" Aspect="AspectFill" 
										Source="{Binding ImagePath}"
										Tapped="OnTapped"
										Panning="OnPanning" />

						<StackLayout Grid.Row="1" BackgroundColor="#80000000" Padding="12">
					    	<Label TextColor="White" Text="{Binding Name}" FontSize="16" 
								HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
					  	</StackLayout>
					</Grid>
				</DataTemplate>
			</cv:CarouselView.ItemTemplate>
		</cv:CarouselView>

		<BoxView x:Name="Line" 
			Color="Red"
			AbsoluteLayout.LayoutBounds=".5, .5, 1, 10"
			AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" />

	</AbsoluteLayout>
</ContentPage>
